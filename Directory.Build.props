<Project>
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <OutputType>Library</OutputType>
    <SatelliteResourceLanguages>en-US</SatelliteResourceLanguages>

    <!-- see https://github.com/dotnet/docs/blob/main/docs/fsharp/language-reference/compiler-options.md -->
    <WarningLevel>5</WarningLevel>
    <OtherFlags>$(OtherFlags) --warnon:1182</OtherFlags> <!-- Unused variables -->
    <OtherFlags>$(OtherFlags) --warnon:3366</OtherFlags> <!-- Index notation -->
    <OtherFlags>$(OtherFlags) --warnon:3387</OtherFlags> <!-- op_Implicit conversion -->
    <OtherFlags>$(OtherFlags) --warnon:3388</OtherFlags> <!-- Additional implicit upcast -->
    <OtherFlags>$(OtherFlags) --warnon:3389</OtherFlags> <!-- Implicit widening 	 -->
    <OtherFlags>$(OtherFlags) --warnon:3390</OtherFlags> <!-- Malformed XML doc comments -->
    <WarningsAsErrors>FS0025</WarningsAsErrors> <!-- Incomplete pattern matches-->
    <!--<TreatWarningsAsErrors>true</TreatWarningsAsErrors>-->
  </PropertyGroup>
</Project>
